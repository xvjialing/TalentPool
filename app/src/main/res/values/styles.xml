<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/obj_on</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <!--底部菜单栏图片-->
    <style name="main_bottom_img">
        <item name="android:layout_width">@dimen/bottom_img_size</item>
        <item name="android:layout_height">@dimen/bottom_img_size</item>
        <item name="android:layout_marginBottom">@dimen/bottom_img_marginbottom</item>
    </style>
    
    <!--顶部标题栏-->
    <style name="titleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titleBarHeight</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!--标题栏文字-->
    <style name="titleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/titleText</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--消息页图片样式-->
    <style name="message_ll_img">
        <item name="android:layout_width">@dimen/message_ll_img_size</item>
        <item name="android:layout_height">@dimen/message_ll_img_size</item>
        <item name="android:layout_marginTop">@dimen/message_ll_img_margin</item>
        <item name="android:layout_marginBottom">@dimen/message_ll_img_margin</item>
        <item name="android:layout_marginRight">@dimen/message_ll_img_margin</item>
        <item name="android:layout_marginLeft">@dimen/message_ll_img_marginLeft</item>
    </style>

    <!--消息页栏位样式-->
    <style name="message_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/message_ll_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--消息页文字样式-->
    <style name="message_ll_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/message_ll_tv_size</item>
        <item name="android:layout_marginLeft">@dimen/message_ll_tv_marginLeft</item>
        <item name="android:textColor">@color/font_gray_drak</item>
    </style>

    <!--个人中心页栏位-->
    <style name="fg_me_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/me_rl_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--个人中心页栏位图片-->
    <style name="fg_me_rl_img">
        <item name="android:layout_height">@dimen/me_rl_img_size</item>
        <item name="android:layout_width">@dimen/me_rl_img_size</item>
        <item name="android:layout_marginLeft">@dimen/me_rl_img_marginLeft</item>
    </style>

    <!--个人中心页栏位文字-->
    <style name="fg_me_rl_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/fg_me_rl_tv_size</item>
        <item name="android:layout_marginLeft">@dimen/me_rl_img_marginLeft</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!--简历编辑页各标题栏文字-->
    <style name="ac_resume_title_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/ac_resume_title_tv_size</item>
        <item name="android:textColor">@color/obj_on</item>
        <item name="android:layout_marginLeft">@dimen/ac_resume_title_tv_marginLeft</item>
        <item name="android:layout_marginTop">@dimen/ac_resume_title_tv_marginTop</item>
    </style>

    <!--简历编辑页各标题栏-->
    <style name="ac_resume_rl">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/ac_resume_rl_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/ac_resume_rl_marginRight</item>
        <item name="android:layout_marginTop">@dimen/ac_resume_rl_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/ac_resume_rl_marginBottom</item>
        <item name="android:padding">@dimen/ac_resume_rl_padding</item>
        <item name="android:background">@drawable/radius_rectangle</item>
    </style>



    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--  边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ac_resume_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ac_resume_tv">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/chat_send_time_bg</item>
    </style>
    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>
</resources>
