<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.xvjialing.administrator.talentpool.ac.ActivityFriend">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/obj_on"/>

            <ImageView
                android:id="@+id/ac_friend_img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_left"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"/>

            <ImageView
                android:id="@+id/ac_friend_img_setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/setting"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ac_friend_img_avater"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avater_friend"
                android:layout_centerInParent="true"
                app:civ_border_width="5dp"
                app:civ_border_color="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ac_friend_img_avater"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/ac_friend_tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ac_friend_tv_adrress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="省市"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/ac_friend_tv_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职业"
                        android:textSize="15sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/ac_friend_tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称"
                    android:textSize="15sp"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="他的动态"
                android:layout_margin="15dp"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="暂无动态"
                android:layout_margin="18dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="他的技能"
                android:layout_margin="15dp"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/ac_friend_tv_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无技能"
                android:layout_margin="18dp"
                android:textSize="15sp"
                android:textColor="@color/orange"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/ac_friend_btn_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:text="加好友"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

</RelativeLayout>
