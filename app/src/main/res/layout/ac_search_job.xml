<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.xvjialing.administrator.talentpool.ac.ActivitySearchJob">

    <RelativeLayout
        android:id="@+id/ac_searchJob_search_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ac_searchJob_img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_left_arrow" />

        <AutoCompleteTextView
            android:id="@+id/ac_searchJob_AT_searchText"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/search_case"
            android:completionThreshold="2"
            android:hint="请输入文字"
            android:paddingLeft="10dp"
            android:textColor="@color/font_gray_drak"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/ac_searchJob_img_search"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dp"
            android:src="@drawable/search_icon_contacts" />
    </RelativeLayout>

    <TextView
        android:id="@+id/ac_searchJob_tv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="热门搜索" />

    <com.xvjialing.administrator.talentpool.view.XCFlowLayout
        android:id="@+id/ac_searchJob_flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"/>

    <ListView
        android:id="@+id/ac_searchJob_lv_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:divider="@null"
        android:dividerHeight="6dp"
        android:scrollbars="none"
        android:visibility="gone"></ListView>

</LinearLayout>
