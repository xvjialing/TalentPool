<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xvjialing.administrator.talentpool.ac.ActivityEditBole">

    <RelativeLayout
        android:id="@+id/ac_editBole_rl_titlebar"
        style="@style/titleBar">

        <ImageView
            android:id="@+id/ac_editBole_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_left_arrow" />

        <TextView
            android:id="@+id/ac_editBole_tv_titlebar"
            style="@style/titleText"
            android:text="编辑伯乐" />
    </RelativeLayout>

    <Button
        android:id="@+id/ac_editBole_btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/obj_on"
        android:layout_alignParentBottom="true"
        android:text="+添加新的伯乐"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/ac_editBole_lv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_editBole_rl_titlebar"
        android:layout_above="@id/ac_editBole_btn_add"/>



</RelativeLayout>
