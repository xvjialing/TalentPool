<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.xvjialing.administrator.talentpool.ac.ActivityMailList">

    <RelativeLayout
        android:id="@+id/ac_mailList_rl_titlebar"
        style="@style/titleBar">

        <ImageView
            android:id="@+id/ac_mailList_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_left_arrow" />

        <TextView
            android:id="@+id/ac_mailList_tv_titlebar"
            style="@style/titleText"
            android:text="邀请好友"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/ac_mailList_mail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"></ListView>
</LinearLayout>
