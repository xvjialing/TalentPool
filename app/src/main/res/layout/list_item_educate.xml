<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ac_resume_rl">

    <LinearLayout
        android:id="@+id/item_ll_editEducate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_img_editEducate"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="编辑"
            android:textColor="@color/obj_on" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_ll_educateExperience_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_schoolNameTitle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="学校名称"/>

            <TextView
                android:id="@+id/item_tv_schoolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学校的名称"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_majorNameTitle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="专业名称"/>

            <TextView
                android:id="@+id/item_tv_majorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专业的名称"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_educateTimeTitle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="就读时间"/>

            <TextView
                android:id="@+id/item_tv_educateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012.9~2013.10"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_img_deleteEducate"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:src="@drawable/delete"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:clickable="true"/>
</RelativeLayout>
