<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xvjialing.administrator.talentpool.ac.ActivityMyFriend">

    <RelativeLayout
        android:id="@+id/ac_myFriend_rl_titlebar"
        style="@style/titleBar">

        <ImageView
            android:id="@+id/ac_myFriend_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_left_arrow" />

        <TextView
            android:id="@+id/ac_myFriend_tv_titlebar"
            style="@style/titleText"
            android:text="我的好友" />
    </RelativeLayout>

    <ListView
        android:id="@+id/ac_myFriend_lv_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        android:divider="@null"
        android:dividerHeight="3dp"/>
</LinearLayout>
