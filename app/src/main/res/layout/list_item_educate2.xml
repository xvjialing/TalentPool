<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_tv_educateTime"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="2012-09~2013-10"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:textSize="10sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/education"
            app:civ_border_width="5dp"
            app:civ_border_color="@color/light_blue"/>

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@color/obj_on"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_tv_schoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校的名称"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textColor="@color/obj_on"/>



            <TextView
                android:id="@+id/item_tv_majorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专业的名称"
                android:layout_marginTop="15dp"
                android:textColor="@color/obj_on"
                android:textSize="18sp"/>


    </LinearLayout>




</LinearLayout>
